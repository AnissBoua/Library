{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<div>
    <h1>Mon panier</h1>
    {% for livre in livres %}
        <div class="livre">
            <h3> {{livre.titre}} </h3>
            <img class="img" src="{{ asset('img/book.png')}} ">
            <div>
            <p> {{livre.description}} </p>
            <div class="livre_ajout">
                <p> {{livre.prix}} &euro;</p>
            </div>
            </div>
        </div>
    {% endfor %}
    <div>
     <p> Total:  {{total}} &euro; </p>
    </div> 
</div>
{% endblock %}
