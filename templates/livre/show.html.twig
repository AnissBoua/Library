{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>


    <table class="table">
        <tbody>
                <td> {{ livre.id }}</td>
            
                <td> {{ livre.titre }}</td>
               
                <td>{{ livre.date ? livre.date|date('Y-m-d') : '' }}</td>
               
                <td> {{ "Description du produit:" ~ livre.description }}</td>
                
                <td>{{ livre.prix }}</td>
           
        </tbody>
    </table>

{% endblock %}
